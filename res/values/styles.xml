<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="android:Theme.Light.NoTitleBar" />
    <style name="word_btn"     >
        <item name="android:layout_width">60dip</item>
        <item name="android:layout_height">60dip</item>
        <item name="android:alpha">0</item>
        <item name="android:background">@drawable/word_btn_bg</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">1dip</item>
        <item name="android:layout_marginLeft">5dip</item>
        <item name="android:visibility">gone</item>
    </style>
    <style name="level_dropdown">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dip</item>
        <item name="android:layout_marginBottom">5dip</item>
        <item name="android:singleLine">true</item>
        <item name="android:clickable">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_weight">1</item>
        
    </style>
    <style name="result_idiom_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="result_idiom_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/result_idiom_layout_height</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_marginLeft">@dimen/normal_margin</item>
        <item name="android:layout_marginRight">@dimen/normal_margin</item>
        <item name="android:visibility">invisible</item>
    </style>
    <style name="result_idiom_imageview">
        <item name="android:src">@drawable/bg_right</item>
        <item name="android:layout_width">10dip</item>
        <item name="android:layout_height">10dip</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_marginRight">10dip</item>
    </style>
</resources>