<?xml version="1.0" encoding="utf-8" ?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/word_title_layout"
		android:layout_height="@dimen/title_bar_height"
		android:layout_width="match_parent"
		android:background="@drawable/title_background"
>
    <TextView 
        android:id="@+id/word_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dip"
        
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="@dimen/title_text_size"
        
        
        />
<LinearLayout 
    android:id="@+id/word_level_choice_layout"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:orientation="horizontal"
    android:clickable="true"
    >
    <TextView 
        android:id="@+id/word_level_choice_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        android:layout_gravity="center_vertical"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:text="@string/level1"
        />
    <ImageButton 
        android:id="@+id/word_level_choice_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:src="@drawable/level_fold"
        android:background="#00000000"
        android:layout_marginLeft="5dip"
        />
</LinearLayout>
    <Button 
        android:id="@+id/word_start_dict"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="10dip"
        android:drawableLeft="@drawable/dict"
        android:background="@drawable/btn_refresh_bg"
        />
    <Button 
        android:id="@+id/word_refresh_bak"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@id/word_start_dict"
        android:layout_centerVertical="true"
        android:padding="10dip"
        android:visibility="gone"
        android:drawableLeft="@drawable/btn_refresh"
        android:background="@drawable/btn_refresh_bg"
        />
    
</RelativeLayout>

