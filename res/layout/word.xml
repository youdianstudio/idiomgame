<?xml version="1.0" encoding="utf-8" ?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/word_parent_layout"
    >
    <!-- titlebar layout start-->
<RelativeLayout 
        android:id="@+id/word_title_include"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:layout_alignParentTop="true"
	>
<include layout="@layout/word_title"    />
</RelativeLayout>

<!-- result show start  -->
 <RelativeLayout 
     android:id="@+id/word_result_show"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="horizontal"
     android:layout_marginTop="10dip"
     android:layout_below="@id/word_title_include"
     >
    <TextView 
        android:id="@+id/word_result"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dip"
        
        /> 
       <TextView 
        android:id="@+id/word_timer"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dip"
        
        /> 
 </RelativeLayout>


<Button 
    android:id="@+id/word_refresh"
    android:layout_height="30dip"
    android:layout_width="match_parent"
    android:layout_alignParentBottom="true"
    android:background="@drawable/btn_blue"
    android:text="重新开始"
    android:textColor="@color/white"
    android:textSize="16sp"
    />
<LinearLayout 
    android:id="@+id/word_idiom_btn_include"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:layout_centerVertical="true"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="10dip"
    >
<include layout="@layout/idiom_btn"
                
    />
</LinearLayout>
</RelativeLayout>