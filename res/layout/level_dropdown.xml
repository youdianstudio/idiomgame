<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/word_level_dropdown_layout"
		android:layout_height="60dip"
		android:layout_width="100dip"
		android:orientation="vertical"
		android:background="@color/azure"
		android:layout_gravity="center_horizontal"
>
 <TextView 
     android:id="@+id/word_level_choice_level1"
     style="@style/level_dropdown"
     android:text="@string/level1"
     android:gravity="center_horizontal"
     android:layout_gravity="center_horizontal"
     />
  <View android:background="#ffa7b5c7" android:layout_width="match_parent" android:layout_height="1dip"/>
  <View android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="1dip"/>
 <TextView 
     android:id="@+id/word_level_choice_level2"
     style="@style/level_dropdown"
     android:text="@string/level2"
     android:gravity="center_horizontal"
     android:layout_gravity="center_horizontal"
     />
   <View android:background="#ffa7b5c7" android:layout_width="match_parent" android:layout_height="1dip"/>
  <View android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="1dip"/>
  <TextView 
     android:id="@+id/word_level_choice_level3"
     style="@style/level_dropdown"
     android:text="@string/level3"
     android:gravity="center_horizontal"
     android:layout_gravity="center_horizontal"
     />
</LinearLayout>